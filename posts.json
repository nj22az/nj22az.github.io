---
layout: null
permalink: posts.json
---
[
{% for post in site.posts %}
  {
    "id": {{ post.id | jsonify }},
    "title": {{ post.title | jsonify }},
    "date": {{ post.date | date_to_xmlschema | jsonify }},
    "displayDate": {{ post.date | date: "%B %-d, %Y" | jsonify }},
    "excerpt": {{ post.excerpt | strip_html | strip_newlines | jsonify }},
    "content": {{ post.content | jsonify }},
    "url": {{ post.url | relative_url | jsonify }},
    "tags": {{ post.tags | default: [] | jsonify }},
    "categories": {{ post.categories | default: [] | jsonify }},
    "contentType": {{ post.content_type | default: "Journal" | jsonify }},
    "featured": {{ post.featured | default: false | jsonify }},
    "coverIcon": {{ post.cover_icon | default: "journal" | jsonify }},
    "thumbnail": {{ post.thumbnail | default: nil | jsonify }}
  }{% unless forloop.last %},{% endunless %}
{% endfor %}
]
